doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="/css/normalize.css")
		link(rel="stylesheet", href="/css/app.css")
		script(src="/dist/bundle.js" defer)
		title #{pageName}
	body 
		header.barra 
			h1 UpTask - Admin projects 
			a(href="#") Close session
		
		main.contenedor 
			aside.contenedor-proyectos
				.panel.crear-proyecto 
					a(href="/new-project" class="boton") New project
						span +
				.panel.lista-proyectos
					h2 Projects
					ul#proyectos.proyectos 
						if(projects.length > 0)
							each project in projects 
								li 
									a(href=`/projects/${project.url}`)= project.name
			block content

			//- pre= vardump(projects)
			